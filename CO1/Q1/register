Mainactivity.java


package com.example.register;

import androidx.appcompat.app.AppCompatActivity;

import android.os.Bundle;
import android.view.View;
import android.widget.EditText;
import android.widget.TextView;


public class MainActivity extends AppCompatActivity {

   @Override
   protected void onCreate(Bundle savedInstanceState) {
       super.onCreate(savedInstanceState);
       setContentView(R.layout.activity_main);
   }
   public void btnclick(View view){
       EditText edt = findViewById(R.id.editText);
       EditText edt1 = findViewById(R.id.Email);
       EditText edt2 = findViewById(R.id.address);
       TextView txt1 = findViewById(R.id.textView9);
       TextView txt2 = findViewById(R.id.textView10);
       TextView txt3 = findViewById(R.id.textView11);
       txt1.setText("hello "+edt .getText().toString() );
       txt2.setText("email "+edt1 .getText().toString() );
       txt3.setText("address "+edt2 .getText().toString() );


   }
}


